@model QuizApp.Models.Game

<!DOCTYPE HTML>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>Start Page</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
</head>
<body>
    <p>@Model.PlayerName</p>
    <p>@Model.ActualQuestion.TheQuestion</p>
    <form action="answer" method="post">
        <input type="hidden" name="PlayerName" value="@Model.PlayerName" />
        <input type="hidden" name="LevelAchieved" value="@Model.LevelAchieved" />
        <input type="hidden" name="PhoneHelpIsAvailable" value="@Model.PhoneHelpIsAvailable" />
        <input type="hidden" name="AudienceHelpIsAvailable" value="@Model.AudienceHelpIsAvailable" />
        <input type="hidden" name="HalferHelpIsAvailable" value="@Model.HalferHelpIsAvailable" />
        <input type="hidden" name="ActualQuestion" value="@Model.ActualQuestion" />
        <input type="hidden" name="AvailableQuestions" value="@Model.AvailableQuestions" />
        <input type="hidden" name="IsWon" value="@Model.IsWon" />

        @for (int i = 0; i < Model.ActualQuestion.Answers.Length; i++)
        {
            <button class="btn btn-lg active btn-primary" name="@i" type="submit">@Model.ActualQuestion.Answers[i]</button>
        }
    </form>
</body>
</html>

